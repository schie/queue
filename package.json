{
  "name": "@schie/queue",
  "version": "1.1.0",
  "description": "A simple task queue implementation in TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/schie/queue.git"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.mjs"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@8.4.0",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsup",
    "lint": "eslint . && npm run lint:lockfile",
    "lint:fix": "eslint . --fix",
    "lint:lockfile": "lockfile-lint --path package-lock.json --validate-https --allowed-hosts npm yarn",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "docs": "typedoc",
    "docs:serve": "npm run docs && npx http-server docs"
  },
  "author": {
    "name": "Dustin Schie",
    "email": "github@schie.io",
    "url": "https://github.com/schie"
  },
  "license": "MIT",
  "keywords": [
    "queue",
    "task-queue",
    "sequential",
    "async",
    "promise",
    "pause-resume",
    "cancellation",
    "single-consumer",
    "typescript",
    "esm",
    "cjs"
  ],
  "homepage": "https://github.com/schie/queue#readme",
  "bugs": {
    "url": "https://github.com/schie/queue/issues"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "validate-conventional-commit": "^1.0.4"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "npm run lint:fix"
    ]
  }
}
